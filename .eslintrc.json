{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard", "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint", "prettier"
    ],
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "no-restricted-syntax": "off",
        "prettier/prettier": "error",
        "no-useless-constructor": "off",
        "dot-notation": "off"
    }
}
